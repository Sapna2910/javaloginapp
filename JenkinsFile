pipeline {
  agent any
  
  stages {
    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage('sonar quality check') {
      steps {
        script {
          withSonarQubeEnv(credentialsId: 'sonar-token') {
            sh "mvn org.codehaus.mojo:sonar-maven-plugin:2.6:sonar"
          }
        }

      }

    }

  }

}
