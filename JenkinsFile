pipeline {
  agent any
  environment {
        PATH = "$PATH:/opt/apache-maven-3.8.2/bin"
    }

  stages {
    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage('sonar quality check') {
      agent {
        docker {
          image 'openjdk:11'
        }
      }
      steps {
        script {
          withSonarQubeEnv(credentialsId: 'sonar-token') {
            sh "mvn sonar:sonar"
          }
        }

      }

    }

  }

}
